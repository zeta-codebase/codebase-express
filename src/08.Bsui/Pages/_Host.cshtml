@page "/"

@using Microsoft.AspNetCore.Authentication
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.Extensions.Options
@using IdentityModel
@using Zeta.CodebaseExpress.Bsui.Services.AppInfo
@using Zeta.CodebaseExpress.Shared.Common.Constants

@namespace Zeta.CodebaseExpress.Bsui.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject IOptions<AppInfoOptions> _appInfoOptions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@_appInfoOptions.Value.FullName</title>
    <base href="~/" />
    <link rel="shortcut icon" href='@Url.Content("~/favicon.ico")'>
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="DataTables/datatables.min.css" rel="stylesheet" />
    <link href="Highcharts/highcharts.css" rel="stylesheet" />
    <link href="css/site.css" rel="stylesheet" />
    <link href="Zeta.CodebaseExpress.Bsui.styles.css" rel="stylesheet" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />
    <div id="blazor-error-ui">
        Please click <a href="javascript:window.location.reload();"><b>HERE</b></a> to refresh the page. If this issue persists, please contact support. Thank you.
        <a class="dismiss">🗙</a>
    </div>
    <script src="_framework/blazor.server.js"></script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
</body>
</html>
