<MudDialog>
    <DialogContent>
        <LoadingLinear IsVisible="_isLoading" />
        <ErrorViewer Error="_error" />
        <EditForm Model="_request" OnInvalidSubmit="OnInvalidSubmit" OnValidSubmit="OnValidSubmit">
            <FluentValidationValidator />
            <MudFocusTrap>
                <MudTextField Label="@DisplayTextFor.Name"
                              Required="true"
                              Placeholder="@($"{DisplayTextFor.Group} {DisplayTextFor.Name}")"
                              @bind-Value="_request.Name" />
            </MudFocusTrap>
            <BottomButtonPanel>
                <MudButton Variant="Variant.Filled" Color="Color.Default" OnClick="Cancel">@CommonDisplayTextFor.Cancel</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" ButtonType="ButtonType.Submit">@CommonDisplayTextFor.Add</MudButton>
            </BottomButtonPanel>
        </EditForm>
    </DialogContent>
</MudDialog>
